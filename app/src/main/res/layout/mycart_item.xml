<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/lightorange2"
        android:id="@+id/viewbackground_id"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:id="@+id/deleteicon_id"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/deleteicon_id"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/viewforeground_id"
        android:background="@color/white"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="5"
            android:id="@+id/cartitemimage_id"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/cartitemname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product 007"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:textSize="15sp"

                />
            <TextView
                android:id="@+id/cartitemprice_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty :"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:textSize="15sp"

                />
            <ImageView
                android:id="@+id/cartitemqty_id"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|start"
                android:layout_marginTop="5dp"
                android:tint="@color/black"
                />



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>